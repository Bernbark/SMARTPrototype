<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/color_purple</item>
    </style>

    <style name="MyDefaultTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCandalFont" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">candal</item>
    </style>

    <style name="cell_style_light_purple">
        <item name="android:background">@drawable/cell_rectangle_even_lighter_purple</item>
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
    </style>

    <style name="cell_style_dark_purple">
        <item name="android:background">@drawable/cell_rectangle_light_purple</item>
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
    </style>

    <style name="ThemeOverlay.PrimaryPalette.Red" parent="">
        <item name="colorPrimary">#e53935</item>
        <item name="colorPrimaryDark">#ab000d</item>
    </style>

    <style name="SliderTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="colorOnSurface">@color/teal_700</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/light_purple</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/default_text</item>
        <item name="android:fontFamily">@font/default_text</item>
    </style>

    <color name="color_purple">#5b39c6</color>
</resources>